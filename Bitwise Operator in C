// Online C++ compiler to run C++ program online
#include <iostream>
#include<bits/stdc++.h>
using namespace std;
int main() {
    // Write C++ code here
    cout<<"bitwise AND "<<(1&3)<<endl;
    cout<<"bitwise OR "<<(1|2)<<endl;
    cout<<"bitwize XOR "<<(5^1)<<endl;
    cout<<"bitwise NOT "<<(~7)<<endl;
    char x = 1, y = 3;
    cout<<(x&y)<<endl;
    char var = 5;
    cout<<"Left shift<<4 : " <<(var<<4)<<endl;
    
    cout<<"Right shift << 4 : "<<(var>>1)<<endl;
    char a = 15;  //15 = 0000 1111
    cout<<"15 & n: "<<(15&4)<<endl;
    //shift left: 15<<4: 1111 0000
    char s = 15<<4;

    cout<<"i can find what is stored at bit(5 to 8): "<<((s & 16)>>4)<<endl;
    //0001 0000 >> 4 : 0001
    
    unsigned int v = 125;
    cout<<sizeof(unsigned int)<<endl;
    //find what bit is at position 30
    cout<<"bit at pos n: "<<(((1<<30)&v)>>30)<<endl;
    cout<<"Binary of : "<<v<<endl;
    //print binary of n
    for(int i=31;i>=0;i--)
    {
        cout<<(((1<<i)&v)>>i);
    }
    cout<<endl;
    
    

    return 0;
}
